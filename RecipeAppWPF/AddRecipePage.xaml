<Page x:Class="RecipeAppWPF.AddRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecipeAppWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Recipe">

    <Grid>
        <StackPanel>
            <TextBox Name="RecipeName" PlaceholderText="Recipe Name"/>
            <TextBox Name="IngredientName" PlaceholderText="Ingredient Name"/>
            <TextBox Name="Quantity" PlaceholderText="Quantity"/>
            <TextBox Name="Unit" PlaceholderText="Unit"/>
            <TextBox Name="Calories" PlaceholderText="Calories"/>
            <TextBox Name="FoodGroup" PlaceholderText="Food Group"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click"/>
        </StackPanel>
    </Grid>
</Page>
